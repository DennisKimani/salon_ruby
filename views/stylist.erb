<h1><%= @stylist.name() %></h1>

<% if @stylist.clients().any?() %>
<h3>Here are all the clients in this stylist:</h3>

<ul>
  <% @stylist.clients().each() do |client| %>
  <li><%= client.name() %>
  </li>
  <% end %>
</ul>

<% else %>
<p>There are no clients on this stylist!</p>
<% end %>

<hr>

<h3>Add a client to
  <%= @stylist.name() %>
</h3>

<form action="/clients" method="post">
  <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">

  <label for="name">Name of the client:</label>
  <input id="name" name="name" type="text">

  <button class="button button3" type="submit">Add client</button>
</form>

<button class="button button2"<a href="/stylists/new">Add New Client</a></button>

<hr>

<div class="container">
  <button class="button button1"<a href="/">Home</a></button>
  <button class="button button2"<a href="/stylists">View All Stylists</a></button>
  <button class="button button1"<a href="/stylists/new">Add New Stylist</a></button>
</div>
